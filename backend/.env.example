# Server
PORT=3000

# PostgreSQL (type values exactly, no quotes)
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=emr
PGUSER=emr_user
PGPASSWORD=emr_local_123

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Encryption Keys for PHI (HIPAA Compliance)
# Generate with: openssl rand -hex 32
# CRITICAL: Use strong, unique keys in production
ENCRYPTION_KEY=
ENCRYPTION_KEY_PREVIOUS=

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FILE=./logs/audit.log